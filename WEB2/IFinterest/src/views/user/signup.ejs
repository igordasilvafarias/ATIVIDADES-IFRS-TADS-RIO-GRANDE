    <!-- HEAD -->
    <%- include('../components/head.ejs') %>
    <!-- HEAD -->

    <body>

    	<!-- NAV -->
    	<%- include('../components/nav.ejs') %>
    	<!-- NAV -->

    	<!-- Photos Grid-->

    	<div class="container">
    		<div class="row">
    			<div class="col-md-4 col-md-offset-4">
    				<div class="panel panel-default">
    					<div class="panel-heading">
    						<h3 class="panel-title">Please Sign Up</h3>
    					</div>
    					<div class="panel-body">
    						<form accept-charset="UTF-8" role="form" method="POST">
    							<fieldset>
    								<div class="form-group">
    									<label for="inputName" class="mt-2">Name</label>
    									<input class="form-control" name="name" type="text" id="inputName" required autofocus>
    									<% if (locals.errors && locals.errors.name) { %>
    									<div class="alert alert-warning" role="alert">
    										<%= locals.errors.name %>
    									</div>
    									<% } %>
    								</div>
    								<div class="form-group">
    									<label for="inputPassword" class="mt-2">Password</label>
    									<input class="form-control" name="password" type="password" id="inputPassword" required>
    									<% if (locals.errors && locals.errors.password) { %>
    									<div class="alert alert-warning" role="alert">
    										<%= locals.errors.password %>
    									</div>
    									<% } %>
    								</div>
    					</div>
    					<input class="btn btn-lg btn-success btn-block" type="submit" value="Sign UP">
    					</fieldset>
    					</form>
    				</div>
    			</div>
    		</div>
    	</div>
    	</div>

    	<!-- Photos Grid-->

    	<!-- Footer -->
    	<%- include('../components/footer.ejs') %>
    	<!-- Footer -->

    	</div>

    </body>

    </html>