    <!-- HEAD -->

<body>

		<!-- NAV -->
		<%- include('../components/nav.ejs') %>
		<!-- NAV -->

	<!-- Photos Grid-->

	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="panel panel-default">
					  <div class="panel-heading">
						<h3 class="panel-title">Bem Vindo ao seu Profile, <%= locals.user.name %>.</h3>
					 </div>
					  <div class="panel-body">
						<form action="/addImage" accept-charset="UTF-8" method="POST" enctype="multipart/form-data">
							<fieldset>
								<div class="form-group">
									<label for="inputTitle" class="mt-2">Titulo</label>
									<input class="form-control" name="title" type="text" id="inputTitle" required autofocus>
										<!-- <% if (locals.userError) { %>
											<div class="alert alert-danger" role="alert">
												Usuário <%= locals.name %> não encontrado.
											</div>
										<% } %> -->
								</div>
								<div class="form-group">
									<label for="inputFile" class="mt-2">Imagem</label>
									<input class="form-control" name="image" type="file" id="inputFile" accept="image/*" required autofocus>
									<!-- <% if (locals.passwordError) { %>
										<div class="alert alert-danger" role="alert">
											<%= locals.passwordError %>
										</div>
									<% } %> -->
								</div>
								<div class="form-group">
									<label for="inputTags" class="mt-2">TAGS - (Separar as TAGS por virgula)</label>
									<input class="form-control" name="tags" type="text" id="inputTags" required autofocus>
									<!-- <% if (locals.passwordError) { %>
										<div class="alert alert-danger" role="alert">
											<%= locals.passwordError %>
										</div>
									<% } %> -->
								</div>
								<div class="form-group">
									<input class="btn btn-lg btn-success btn-block" type="submit" value="Adicionar">
								</div>
								<div class="form-group">
									<input class="btn btn-lg btn-success btn-block" onclick="location.href='/profile'" value="Voltar">
								</div>
							</fieldset>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Photos Grid-->
	
		<!-- Footer -->
		<%- include('../components/footer.ejs') %>
		<!-- Footer -->

	</div>

</body>
</html>
