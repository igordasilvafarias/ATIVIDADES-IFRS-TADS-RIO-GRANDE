<body onload="resizeAllGridItems()">

  <% if (images.length == 0) { %>
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Imagens</h3>
            </div>
            <div class="panel-body">
              <fieldset>
                <div class="form-group">
                  <h3 class="panel-title"> NÃ£o foram encontrado Imagens Adicionadas!</h3>
                </div>
                <div class="form-group">
                  <input class="btn btn-lg btn-success btn-block" onclick="location.href='/profile'"
                    value="Voltar">
                </div>
              </fieldset>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% } else { %>
      <div class="grid">
        <% for (let i = 0; i < images.length; i++) { %>
        <div class="item photo">
          <div class="content">
            <div class="title">
              <h3><%= images[i].title %> <%= images[i].id %></h3>
            </div>
            <img class="photothumb" src="uploads/<%= images[i].path %>">
            <% if(locals.user) { %>
              <div class="form-group">
                <input class="btn btn-lg btn-success btn-block" onclick="location.href='/image/linkGallery/<%= images[i].id %>'"
                  value="Adicionar em uma Galeria">
              </div>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
  <% } %>

</body>

